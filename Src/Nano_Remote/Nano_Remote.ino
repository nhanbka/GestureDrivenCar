volatile bool mpuInterrupt = false;     // indicates whether MPU interrupt pin has gone high
void dmpDataReady() {
  mpuInterrupt = true;
}

#include <SoftwareSerial.h>
SoftwareSerial BTSerial(11, 12); // RX | TX

char modeArr[] = {'0', '1', '2', '3'};
int x = 1;
const byte ledPin1 = 10;
